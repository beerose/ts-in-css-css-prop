{
  // You can use comments in this file ðŸ˜²

  // similar to GitHub theme
  "workbench.colorTheme": "GitHub Plus",

  // make it big
  "editor.fontSize": 18, // <
  "editor.lineHeight": 36, // <
  "editor.fontWeight": "500", // <

  // minimize distractions
  "window.title": "${dirty} CSS prop${separator}${activeEditorShort}",
  "window.menuBarVisibility": "hidden",
  "editor.renderIndentGuides": false,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": false,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": false,

  // Quokka
  "quokka.showOutputOnStart": false,
  "quokka.compactMessageOutput": false,

  "[markdown]": {
    "editor.formatOnSave": false
  },

  // need this one for 04.ts and 05.ts
  "typescript.tsdk": "node_modules/typescript/lib",
  "typelens.showReferencesForClasses": false,
  "prettier.printWidth": 60
}
